---
layout: 'base.njk'
---

<article class="main-article">
    <div class="container container--narrow flow">

        <div class="main-article__title-container">
            <h1 class="article-title">
                {{ title }}
            </h1>
            <p class="article-title__description">Published on <span>{{ date | postDate}}</span></p>
        </div>
        <figure class="main-article__figure">
            <img src="{{ image }}" alt="{{ imageAlt }}">
            <figcaption>
                {{ imageAlt }}
            </figcaption>
        </figure>
        
        {{ content | safe }}
    
    </div>
</article>

